<div class="mt-4">
  <h3>Chỉnh sửa khóa học</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        value="{{course.name}}"
        name="name"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả </label>
      <textarea
        name="description"
        class="form-control"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoID">video id</label>
      <input
        type="text"
        value="{{course.videoID}}"
        name="videoID"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        value="{{course.level}}"
        name="level"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Sửa khóa học</button>
  </form>
</div>